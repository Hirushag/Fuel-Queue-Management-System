<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/create_order_frag"
    android:layout_height="match_parent"
    tools:context=".fragment.fuelStation.AddFuelStation">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

<!--        android:layout_margin="5dp"-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/gradient_1"
            android:gravity="center_horizontal"
            android:text="@string/create_fuel_station"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005"
            tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/station_name"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/border_view_bg"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/station_name"
                android:textColor="#070707"
                app:layout_constraintBottom_toTopOf="@+id/station_name"
                app:layout_constraintEnd_toEndOf="@+id/station_name"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toStartOf="@+id/station_name"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/station_address"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/border_view_bg"
                android:inputType="text"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="@+id/station_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_name"
                app:layout_constraintTop_toBottomOf="@+id/station_name" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_town"
                android:textColor="#070707"
                app:layout_constraintBottom_toTopOf="@+id/station_open_hours"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_address"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/station_town"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/border_view_bg"
                android:inputType="text"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_address" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:text="@string/station_open"
                android:textColor="#070707"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_address" />

            <EditText
                android:id="@+id/station_open_hours"
                android:layout_width="305dp"
                android:layout_height="42dp"
                android:layout_marginTop="92dp"
                android:background="@drawable/border_view_bg"
                android:ems="10"
                android:inputType="time"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_address" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/station_close"
                android:textColor="#070707"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_open_hours" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/license_number"
                android:textColor="#070707"
                app:layout_constraintEnd_toEndOf="@+id/station_address"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toStartOf="@+id/station_address"
                app:layout_constraintTop_toBottomOf="@+id/station_open_hours" />

            <EditText
                android:id="@+id/station_close"
                android:layout_width="305dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_view_bg"
                android:ems="10"
                android:inputType="time"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="@+id/station_open_hours"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_open_hours"
                app:layout_constraintTop_toBottomOf="@+id/station_open_hours" />

            <EditText
                android:id="@+id/license_number"
                android:layout_width="305dp"
                android:layout_height="42dp"
                android:layout_marginTop="76dp"
                android:background="@drawable/border_view_bg"
                android:ems="10"
                android:inputType="text"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="@+id/station_open_hours"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/station_open_hours"
                app:layout_constraintTop_toBottomOf="@+id/station_open_hours" />

            <Button
            android:id="@+id/add_fuel_station_btn"
            android:layout_width="70dp"
            android:layout_height="64dp"
            android:layout_marginTop="276dp"
            android:background="@drawable/circle"
                android:textColor="@color/white"
            android:text="@string/add_fuel_station_btn"
            app:layout_constraintEnd_toEndOf="@+id/station_address"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/station_address"
            app:layout_constraintTop_toBottomOf="@+id/station_address" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_address_text"
                android:textColor="#070707"
                app:layout_constraintBottom_toTopOf="@+id/station_address"
                app:layout_constraintEnd_toEndOf="@+id/station_name"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toStartOf="@+id/station_name"
                app:layout_constraintTop_toBottomOf="@+id/station_name"
                app:layout_constraintVertical_bias="0.363" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>